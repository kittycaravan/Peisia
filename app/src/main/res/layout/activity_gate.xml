<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ActivityGate">

    <Button
            android:text="케릭터생성"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gate_btn_create_character" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/gate_btn_enter_single_game"/>
    <Button
            android:text="게임시작(싱글)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gate_btn_enter_single_game"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/gate_btn_enter_multi_game"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="게임시작(멀티)"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gate_btn_enter_multi_game" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>